@model FPTJob.Models.CV

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit CV</h1>

<!-- Form dùng để cập nhật CV, bao gồm cả file PDF -->
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Current PDF File</label>
        @if (!string.IsNullOrEmpty(Model.file))
        {
            <!-- Nếu đã có file, cho phép người dùng xem hoặc tải xuống file -->
            <p>Current file: <a href="@Model.file" target="_blank">View PDF</a></p>
        }
        else
        {
            <p>No PDF file uploaded.</p>
        }
    </div>

    <div class="form-group">
        <label for="newFile" class="control-label">Upload New PDF File</label>
        <input type="file" name="newFile" class="form-control" />
        <span class="text-danger">
            <!-- Hiển thị thông báo lỗi nếu không phải file PDF -->
            @ViewBag.FileError
        </span>
    </div>

    <input type="hidden" asp-for="CVID" />

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
