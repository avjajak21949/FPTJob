<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTJobMatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Điều chỉnh kích thước logo và hình ảnh cho nhỏ hơn và phù hợp trên mọi thiết bị */
        img {
            max-width: 100%;
            height: auto;
        }

        /* Đảm bảo layout không bị chèn lẫn khi zoom */
        body {
            overflow-x: hidden;
        }

        /* Tối ưu kích thước logo */
        .navbar-brand img {
            width:70px;
        }

        /* Điều chỉnh khoảng cách giữa các mục trong footer */
        footer .container {
            padding-bottom: 40px; /* Điều chỉnh để footer không che các phần khác khi zoom in */
        }

        /* Tối ưu hiển thị logo tài trợ */
        .sponsor-logo {
            width: 100%; /* Chiếm toàn bộ chiều ngang */
            text-align: center;
            margin-bottom: 10px;
        }

            .sponsor-logo img {
                width: 80px; /* Kích thước logo tài trợ nhỏ hơn */
            }

        /* Cố định footer ở cuối trang */
        .sticky-footer {
            position: fixed;
            bottom: 0;
            width: 50%;
            background-color: #f8f9fa;
        }

        .sticky-footer {
            position: fixed;
            bottom: 0;
            width: 100%; /* Đặt lại width để chiếm toàn bộ chiều ngang */
            background-color: #f8f9fa;
            text-align: center; /* Căn giữa nội dung trong footer */
            padding: 10px 0; /* Thêm khoảng cách trên và dưới */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.jpg" alt="FPTJobMatch" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Jobs" asp-action="Index">Jobs</a></li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Jobseeker"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="CVs" asp-action="Index">Import CV</a></li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Adminstator"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Category edit</a></li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Employer"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="JobCVs" asp-action="Index">Manager</a></li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Jobseeker"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="JobCVs" asp-action="Index">Check CVs</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>


    <footer class="sticky-footer text-muted">
        <div class="container">&copy; 2024 - FPTJobMatch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>