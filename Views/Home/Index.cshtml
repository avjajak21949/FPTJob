@{
    ViewData["Title"] = "Home Page";
}

<!-- Slide show with 5 responsive images -->
<div id="mainCarousel" class="carousel slide mb-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mainCarousel" data-slide-to="1"></li>
        <li data-target="#mainCarousel" data-slide-to="2"></li>
        <li data-target="#mainCarousel" data-slide-to="3"></li>
        <li data-target="#mainCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slidel1.jpg" class="d-block w-100 img-fluid" alt="Slide 1" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="carousel-item">
            <img src="~/images/slidel2.jpg" class="d-block w-100 img-fluid" alt="Slide 2" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="carousel-item">
            <img src="~/images/slidel3.jpeg" class="d-block w-100 img-fluid" alt="Slide 3" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="carousel-item">
            <img src="~/images/slidel4.jpg" class="d-block w-100 img-fluid" alt="Slide 4" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="carousel-item">
            <img src="~/images/slidel5.jpg" class="d-block w-100 img-fluid" alt="Slide 5" style="max-height: 400px; object-fit: cover;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color: rgba(0,0,0,0.6); border-radius: 50%;"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true" style="background-color: rgba(0,0,0,0.6); border-radius: 50%;"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Introduction section -->
<div class="about-section mt-5 mb-5 text-center" style="background: linear-gradient(120deg, #f0f0f0, #ffffff); padding: 60px 40px; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">
    <h2 style="font-size: 2.5rem; color: #007bff; font-weight: bold;">Discover Our Platform</h2>
    <div class="container">
        <p style="font-size: 1.3rem; margin: 25px 0;"><strong>Welcome to Your Next Opportunity!</strong> Our website empowers job seekers and employers, providing a cutting-edge platform to connect talents with the right opportunities.</p>
        <p style="font-size: 1.3rem; margin: 25px 0;"><strong>Why Choose Us?</strong> Experience the difference with our innovative search and application tools, simplifying your job hunt.</p>
        <p style="font-size: 1.3rem; margin: 25px 0;"><strong>Our Mission:</strong> We bridge the gap between aspiring talents and companies, creating a seamless recruitment experience.</p>
        <p style="font-size: 1.3rem; margin: 25px 0;"><strong>Tips for Crafting a Winning CV:</strong> Keep your CV clear, concise, and tailored. Highlight relevant skills and experiences to stand out.</p>
    </div>
</div>

